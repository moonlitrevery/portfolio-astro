---
// A tiny client-side theme toggle button using localStorage and the `dark` class.
---
<button id="theme-toggle" class="p-2 rounded-md border border-zinc-200 hover:border-accent hover:text-accent dark:border-zinc-700" aria-label="Toggle theme">
  <svg id="icon-sun" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" class="h-5 w-5 hidden dark:block" fill="currentColor">
    <path d="M6.76 4.84l-1.8-1.79-1.41 1.41 1.79 1.8 1.42-1.42zM1 13h3v-2H1v2zm10-9h2V1h-2v3zm7.04 2.46l1.79-1.8-1.41-1.41-1.8 1.79 1.42 1.42zM17 13h3v-2h-3v2zm-5 8h2v-3h-2v3zm-7.66-3.34l1.41 1.41 1.8-1.79-1.42-1.42-1.79 1.8zM20.66 17.66l-1.41 1.41-1.8-1.79 1.42-1.42 1.79 1.8zM12 8a4 4 0 100 8 4 4 0 000-8z"/>
  </svg>
  <svg id="icon-moon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" class="h-5 w-5 dark:hidden" fill="currentColor">
    <path d="M12.74 2.28a9 9 0 109.0 9.98A7 7 0 0112.74 2.28z"/>
  </svg>
</button>
<script is:inline>
  (function(){
    const btn = document.getElementById('theme-toggle');
    if (!btn) return;
    btn.addEventListener('click', () => {
      const root = document.documentElement;
      const isDark = root.classList.toggle('dark');
      try { localStorage.setItem('theme', isDark ? 'dark' : 'light'); } catch(e) {}
    });
  })();
</script>
