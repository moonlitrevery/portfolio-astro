---
import type { ExperienceItem } from "../data/profile";
export interface Props { items: ExperienceItem[]; lang?: string; title?: string }
const { items, lang = 'en', title = 'Experience' } = Astro.props as Props;
---
<section id="experience" class="mt-16">
  <h2 class="text-2xl font-semibold"><span class="text-gradient">{title}</span></h2>
  <div class="mt-6 space-y-8">
    {items.map((job) => (
      <article class="card group hover:border-accent/50 transition-all duration-200">
        <header>
          <h3 class="text-lg font-semibold text-gradient">{job.title}</h3>
          <p class="text-sm text-zinc-600 dark:text-zinc-400 mt-1">{job.company}</p>
        </header>
        <ul class="mt-4 list-disc pl-5 space-y-2 text-zinc-800 dark:text-zinc-100 text-sm">
          {(lang === 'pt' && job.bulletsPt ? job.bulletsPt : job.bullets).map((b) => <li class="leading-relaxed">{b}</li>)}
        </ul>
      </article>
    ))}
  </div>
</section>
