---
import type { ExperienceItem } from "../data/profile";
export interface Props { items: ExperienceItem[]; lang?: string }
const { items, lang = 'en' } = Astro.props as Props;
---
<section id="experience" class="mt-16">
  <h2 class="text-2xl font-semibold">Experience</h2>
  <div class="mt-6 space-y-8">
    {items.map((job) => (
      <article class="card">
        <header>
          <h3 class="text-lg font-semibold">{job.title}</h3>
          <p class="text-sm text-zinc-600 dark:text-zinc-400">{job.company}</p>
        </header>
        <ul class="mt-3 list-disc pl-5 space-y-1 text-zinc-800 dark:text-zinc-100">
          {(lang === 'pt' && job.bulletsPt ? job.bulletsPt : job.bullets).map((b) => <li>{b}</li>)}
        </ul>
      </article>
    ))}
  </div>
</section>
