---
import type { EducationItem } from "../data/profile";
export interface Props { items: EducationItem[]; lang?: string; title?: string }
const { items, lang = 'en', title = 'Education' } = Astro.props as Props;
---
<section id="education" class="mt-16">
  <h2 class="text-2xl font-semibold"><span class="text-gradient">{title}</span></h2>
  <div class="mt-6 grid gap-6 md:grid-cols-2">
    {items.map((edu) => (
      <article class="card group hover:border-accent/50 transition-all duration-200">
        <h3 class="text-lg font-semibold text-gradient">{lang === 'pt' && edu.degreePt ? edu.degreePt : edu.degree}</h3>
        <p class="text-sm text-zinc-600 dark:text-zinc-400 mt-1">{edu.institution}{edu.period ? ` Â· ${edu.period}` : ""}</p>
        {(lang === 'pt' && edu.detailsPt) ? (
          <p class="mt-3 text-zinc-700 dark:text-zinc-200 text-sm">{edu.detailsPt}</p>
        ) : (
          edu.details && <p class="mt-3 text-zinc-700 dark:text-zinc-200 text-sm">{edu.details}</p>
        )}
      </article>
    ))}
  </div>
</section>
