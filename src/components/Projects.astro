---
import type { ProjectItem } from "../data/profile";
export interface Props { items: ProjectItem[]; viewLabel?: string; title?: string; moreOnGitHub?: string; lang?: string }
const { items, viewLabel = 'View', title = 'Projects', moreOnGitHub = 'More on GitHub:', lang = 'en' } = Astro.props as Props;
---
<section id="projects" class="mt-16">
  <h2 class="text-2xl font-semibold"><span class="text-gradient">{title}</span></h2>
  <div class="mt-6 grid gap-6 md:grid-cols-2">
    {items.map((p) => (
      <article class="card group hover:scale-[1.02] transition-transform duration-200">
        <header class="flex items-center justify-between">
          <h3 class="text-lg font-semibold">{p.displayName}</h3>
          <a class="text-sm px-3 py-1.5 rounded-md btn-gradient hover:shadow-lg transition-shadow" href={p.url} target="_blank">{viewLabel}</a>
        </header>
        {p.description && <p class="mt-2 text-zinc-700 dark:text-zinc-200">{(lang === 'pt' && p.descriptionPt) ? p.descriptionPt : p.description}</p>}
        {p.tech && p.tech.length > 0 && (
          <ul class="mt-3 flex flex-wrap gap-2 text-xs text-zinc-700 dark:text-zinc-300">
            {p.tech.map((t) => <li class="px-2 py-1 bg-zinc-100 dark:bg-zinc-700 rounded">{t}</li>)}
          </ul>
        )}
      </article>
    ))}
  </div>
  <p class="mt-4 text-sm text-zinc-600 dark:text-zinc-400">{moreOnGitHub} <a class="underline hover:text-accent" href="https://github.com/moonlitrevery" target="_blank">@moonlitrevery</a></p>
</section>
